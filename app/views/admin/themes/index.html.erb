<section class="lg:ml-80 ml-0 bg-custom-color3 h-screen lg:px-16 px-4 <%= yield (:section_class) %>" id="dashboard-content">
  <div class="w-full">
    <div class="w-full lg:hidden flex items-center pt-4">
      <button
        id="sidebar-toggle"
        class="bg-transparent outline-none shadow-none focus:outline-none focus:shadow-none border-0 border-none"
      >
        <span class="bg-blue h-1 w-6 mb-1 block"></span>
        <span class="bg-blue h-1 w-6 mb-1 block"></span>
        <span class="bg-blue h-1 w-6 mb-1 block"></span>
      </button>
    </div>
    <div class="flex items-center md:py-16 py-4">
      <div class="w-1/3 w-full">
        <h1 class="md:text-4xl text-2xl font-regular">Themes</h1>
      </div>
      <div class="w-2/3 flex items-center text-right justify-end">
        <button
          class="shadow-none outline-none border-none border-0 focus:outline-none focus:shadow-none"
        >
          <%= image_pack_tag "dashboard/search.svg", width: "20" %>
        </button>
      </div>
    </div>
    <div class="flex md:flex-nowrap flex-wrap items-start">
      <% @themes.each do |theme, count| %>
        <div class="lg:w-1/4 md:w-1/2 w-full relative md:my-0 my-10 md:mr-16 mr-0">
          <div class="relative overflow-hidden landing-img rounded-xl mb-5 shadow-lg cursor-pointer">
            <%= image_tag theme.cover, class: "w-full" %>
            <%= link_to "view details", admin_theme_path(id: theme.name),
                        class: "text-white font-regular absolute -left-full top-0 w-full h-full bg-blue flex items-center justify-center text-center capitalize text-xl rounded-xl cool-transition landing-img-link opacity-80" %>
            <span class="rounded-tr-xl bg-green bottom-0 left-0 absolute px-6 py-1"><%= @stats.fetch(theme.name, 0) %></span>
          </div>
          <p class="capitalize text-xl"><%= theme.name %></p>
        </div>
      <% end %>
    </div>
  </div>
</section>
