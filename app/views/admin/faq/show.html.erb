<%= render 'admin/shared/mobile_sidebar_non_index' %>

<div class="w-full my-5">
  <label>
    <%= link_to "FAQ", admin_faq_index_path, class: "text-blue font-semibold" %>
    <span class="mx-1">/</span>
    <span>View Faq</span>
  </label>
</div>

<div class="flex flex-wrap md:mt-5 md:mb-12 items-center">
  <div class="md:w-1/2 w-full">
    <h1 class="md:text-5xl text-xl">FAQ <%= @faq.id %></h1>
  </div>

  <div class="md:w-1/2 w-full flex items-center justify-end">
    <%= link_to "Edit", edit_admin_faq_path(@faq), class:"capitalize bg-custom-color1 text-white px-6 py-2 rounded-full flex ml-4 items-center" %>
  </div>
</div>


<div class="flex md:mt-0 mt-10">
  <div class="w-full">

    <div class="w-full px-5 py-3 text-xl mb-2 focus:text-black">
      Question: <%= raw @faq.question %>
    </div>
    <div class="w-full px-5 py-3 text-xl rounded-lg mb-2 focus:text-black">
      Answer: <%= raw @faq.answer %>
    </div>
  </div>
</div>

