<p class="text-2xl mb-4 tracking-wide">Path</p>
<div class="flex md:mt-0 mt-10">
  <div class="md:w-1/2 w-full md:mb-0 mb-1 md:mr-6">
    <%= f.full_error :path %> 
    <%= f.input_field :path, 
      class: "w-full px-5 py-3 text-xl outline-none focus:outline-none border-custom-color1 border border-solid rounded-lg mb-10 focus:text-black", 
      placeholder: "Enter Path" 
    %>
  </div>
</div>

<p class="text-2xl mb-4 tracking-wide">State</p>
<div class="flex md:flex-nowrap flex-wrap items-center justify-between">
  <div class="md:w-1/2 w-full md:mb-0 mb-1 md:mr-6">
    <%= f.full_error :state %> 
    <%= f.input_field :state, collection: Landing.states.keys, 
      class: "w-full px-5 py-3 text-xl outline-none focus:outline-none border-custom-color1 border border-solid rounded-lg mb-5 focus:text-black"
    %>
  </div>
</div>

