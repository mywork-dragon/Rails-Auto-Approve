
<div class="w-full my-5">
  <label>
    <%= link_to "Jobs", admin_positions_path, class: "text-blue font-semibold" %>
    <span class="mx-1">/</span>
    <span>Edit Job</span>
  </label>
</div>
<%= simple_form_for @position, url: admin_position_path(@position) do |f| %>
  <div class="flex flex-wrap md:mt-5 md:mb-12 items-center">
    <div class="md:w-1/2 w-full">
      <h1 class="md:text-5xl text-xl">Edit Job</h1>
    </div>

    <div class="md:w-1/2 w-full flex items-center justify-end">
      <label class="switch">
        <%= f.input :state, as: :integer do %>
          <%= f.check_box :state, {id: "live_check"}, "active", "archived" %>
          <span class="slider round"></span>
        <% end %>
      </label>
      <span class="ml-2 live-text cool-transition">Live</span>
      <%= f.submit "Save", class:"capitalize bg-custom-color1 text-white px-6 py-2 rounded-full flex ml-4 items-center" %>
    </div>
  </div>
  <%= render "form", f: f %>
<% end %>
