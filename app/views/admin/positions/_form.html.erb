<div class="flex md:mt-0 mt-10">
  <div class="w-full">
    <%= f.input_field :title, 
      class: "w-full px-5 py-3 text-xl text-custom-color1 outline-none focus:outline-none border-custom-color1 border border-solid rounded-lg mb-10 focus:text-black", 
      placeholder: "Enter Title" 
    %>

    <p class="text-2xl mb-4 tracking-wide">Application Type</p>
    <div class="flex md:flex-nowrap flex-wrap items-center justify-between">
      <div class="md:w-1/2 w-full md:mb-0 mb-1 md:mr-6">
        <%= f.input_field :location, 
          class: "w-full px-5 py-3 text-xl text-custom-color1 outline-none focus:outline-none border-custom-color1 border border-solid rounded-lg mb-5 focus:text-black", 
          placeholder: "Location" 
        %>
      </div>
      <div class="md:w-1/2 w-full">
        <%= f.input_field :email, 
          class: "w-full px-5 py-3 text-xl text-custom-color1 outline-none focus:outline-none border-custom-color1 border border-solid rounded-lg mb-5 focus:text-black", 
          placeholder: "Enter CTA/Email" 
        %>
      </div>
    </div>
    <div class="w-full bg-white rounded-lg" id="editor" placeholder="Job description"></div>
    <%= f.input_field :content, 
      class: "w-full px-5 py-3 text-xl text-custom-color1 outline-none focus:outline-none border-custom-color1 border border-solid rounded-lg mb-5 focus:text-black", 
      placeholder: "Job Description" 
    %>
    <div class="md:w-1/2 w-full">
      <%= f.input_field :url, 
        class: "w-full px-5 py-3 text-xl text-custom-color1 outline-none focus:outline-none border-custom-color1 border border-solid rounded-lg mb-5 focus:text-black", 
        placeholder: "Enter CTA/Email" 
      %>
    </div>
  </div>
</div>