<!DOCTYPE html>
<html>
  <head>
    <title>AutoApprove</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="description" content="" />
    <meta name="author" content="" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Auto Approve</title>
    <meta content='initial-scale=1.0,user-scalable=no,maximum-scale=1,width=device-width' name='viewport' />
    <%= javascript_pack_tag "admin", 'data-turbolinks-track': "reload" %>
  </head>

  <body>
    <div
      class="fixed h-screen bg-white lg:w-80 w-full lg:left-0 -left-full flex cool-transition z-50 md:overflow-y-hidden overflow-y-scroll"
      id="dashboard-sidebar"
    >
      <div class="container">
        <div class="lg:hidden block w-full text-right my-6 px-4">
          <button id="sidebar-close" class="bg-transparent outline-none shadow-none focus:outline-none focus:shadow-none border-none border-0">
            <span class="close-line-1 bg-blue h-1 w-8 mb-1 block"></span>
            <span class="close-line-2 bg-blue h-1 w-8 mb-1 block"></span>
          </button>
        </div>
        <div class="w-3/4 mx-auto md:my-16 my-12">
          <%= image_pack_tag "logo.png" %>
        </div>
        <ul class="flex flex-wrap">
          <li class="w-full px-16 flex items-center pb-2 mb-8">
            <%= image_pack_tag "dashboard/dashboard.svg", class: "-ml-4", width: "25" %>
            <p class="text-blue capitalize text-lg ml-6">Dashboard</p>
          </li>
          <li class="w-full px-16 flex items-center py-2 mb-8 active-dash-link cursor-pointer">
            <%= image_pack_tag "dashboard/dash-landing.svg", class: "-ml-4", width: "25" %>
            <%= link_to "Landing Pages", admin_positions_path, class: "text-blue capitalize text-lg ml-6" %>
          </li>
          <li class="w-full px-16 flex items-center py-2 mb-8 cursor-pointer dash-link">
            <%= image_pack_tag "dashboard/dash-resources.svg", class: "-ml-4", width: "25" %>
            <%= link_to "Resources", "#", class: "text-blue capitalize text-lg ml-6" %>
          </li>
          <li class="w-full px-16 flex items-center py-2 mb-8 cursor-pointer dash-link">
            <%= image_pack_tag "dashboard/dash-reviews.svg", class: "-ml-4", width: "25" %>
            <%= link_to "Jobs", admin_reviews_path, class: "text-blue capitalize text-lg ml-6" %>
          </li>
          <li class="w-full px-16 flex items-center py-2 mb-8 cursor-pointer dash-link">
            <%= image_pack_tag "dashboard/dash-faq.svg", class: "-ml-4", width: "25" %>
            <%= link_to "FAQ", admin_faq_index_path, class: "text-blue capitalize text-lg ml-6" %>
          </li>
          <li class="w-full px-16 flex items-center py-2 mb-8 cursor-pointer dash-link">
            <%= image_pack_tag "dashboard/dash-jobs.svg", class: "-ml-4", width: "25" %>
            <%= link_to "Jobs", admin_positions_path, class: "text-blue capitalize text-lg ml-6" %>
          </li>
          <li class="w-full px-16 flex items-center py-2 mb-8 cursor-pointer dash-link">
            <%= image_pack_tag "dashboard/dash-users.svg", class: "-ml-4", width: "25" %>
            <a href="./dashboard-users.html" class="text-blue capitalize text-lg ml-6">users</a>
          </li>
        </ul>
      </div>
    </div>

    <section class="lg:ml-80 ml-0 bg-custom-color3 h-screen lg:px-16 px-4" id="dashboard-content">
      <%= yield %>
    </section>

    <script src="../assets/js/jquery.min.js"></script>
    <script src="../assets/js/custom.js"></script>

  </body>
</html>
