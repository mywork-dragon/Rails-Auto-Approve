          div class="w-full"
            select id="state" class="w-full text-gray10 pt-4 pb-1.5 border-b border-gray11"  onchange="onSelectValidation(event)"
              <option disabled selected value="0"> State</option>
              <% Mappings::States::MAPPING.each do |code, label| %>
                <option class="" value="<%= code %>"><%= label %></option>
              <% end %>

            div id="state_required" class="hidden text-red-500 text-left text-xs" required

          div class="w-full input-group"
            input  id="zip_code" class="inputAnimation" type="text" maxlength="5" oninput="onZipCode(event)"/
            label Zip Code
            div id="zipcode_required" class="hidden text-red-500 text-left text-xs" required
            div id="zipcode_invalid" class="hidden text-red-500 text-left text-xs" invalid zip code

        div class="grid grid-cols-2 max-sm:grid-cols-1 gap-12 mb-12"
          div class="w-full input-group"
            input id="birth_date" class="inputAnimation"  type="text" maxlength="10" oninput="onBirthDate(event)"/
            label Date of Birth
            div id="birthdate_required" class="hidden text-red-500 text-left text-xs" required
            div id="birthdate_invalid" class="hidden text-red-500 text-left text-xs" invalid birth date
          div class="w-full input-group"
            input id="social_security" class="inputAnimation" type="text" maxlength="4" oninput="onSocialSecurity(event)"/
            label Last 4 Social Security (optional)
            div id="social_security_invalid" class="hidden text-red-500 text-left text-xs" invalid social security

